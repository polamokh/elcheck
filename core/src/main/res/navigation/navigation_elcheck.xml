<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_elcheck"
    app:startDestination="@id/ordersFragment">

    <fragment
        android:id="@+id/ordersFragment"
        android:name="me.polamokh.elcheck.core.orders.OrdersFragment"
        android:label="fragment_orders"
        tools:layout="@layout/fragment_orders">
        <action
            android:id="@+id/action_ordersFragment_to_orderDetailsFragment"
            app:destination="@id/orderDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/orderDetailsFragment"
        android:name="me.polamokh.elcheck.core.orders.details.OrderDetailsFragment"
        android:label="fragment_order_details"
        tools:layout="@layout/fragment_order_details">
        <argument
            android:name="orderId"
            app:argType="long" />
        <action
            android:id="@+id/action_orderDetailsFragment_to_addExpenseFragment"
            app:destination="@id/addExpenseFragment" />
        <action
            android:id="@+id/action_orderDetailsFragment_to_addValueAddedFragment"
            app:destination="@id/addValueAddedFragment" />
    </fragment>
    <fragment
        android:id="@+id/addExpenseFragment"
        android:name="me.polamokh.elcheck.core.expenses.add.AddExpenseFragment"
        android:label="fragment_add_expense"
        tools:layout="@layout/fragment_add_expense">
        <argument
            android:name="orderId"
            app:argType="long" />
    </fragment>
    <fragment
        android:id="@+id/addValueAddedFragment"
        android:name="me.polamokh.elcheck.core.valuesadded.add.AddValueAddedFragment"
        android:label="fragment_add_value_added"
        tools:layout="@layout/fragment_add_value_added">
        <argument
            android:name="orderId"
            app:argType="long" />
    </fragment>
</navigation>