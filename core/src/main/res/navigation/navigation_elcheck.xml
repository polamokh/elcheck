<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_elcheck"
    app:startDestination="@id/ordersFragment">

    <fragment
        android:id="@+id/ordersFragment"
        android:name="me.polamokh.elcheck.core.orders.OrdersFragment"
        android:label="fragment_orders"
        tools:layout="@layout/fragment_orders">
        <action
            android:id="@+id/action_ordersFragment_to_participantsListFragment"
            app:destination="@id/participantsListFragment" />
    </fragment>
    <fragment
        android:id="@+id/participantsListFragment"
        android:name="me.polamokh.elcheck.core.participants.list.ParticipantsListFragment"
        android:label="fragment_participants_list"
        tools:layout="@layout/fragment_participants_list">
        <argument
            android:name="orderId"
            app:argType="integer" />
    </fragment>
</navigation>